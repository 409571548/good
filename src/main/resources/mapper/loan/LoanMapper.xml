<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jk.modules.loans.mapper.LoanMapper" >
    <resultMap id="BaseResultMap" type="com.jk.modules.loans.model.Loan" >
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="loan_name" property="loanName" jdbcType="VARCHAR" />
        <result column="loan_price" property="loanPrice" jdbcType="DOUBLE" />
        <result column="accrual" property="accrual" jdbcType="DOUBLE" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="modify_time" property="modifyTime" jdbcType="TIMESTAMP" />
    </resultMap>

    <select id="findList" resultMap="BaseResultMap">
        SELECT * FROM loan
    </select>

    <insert id="save" parameterType="com.jk.modules.loans.model.Loan">
        <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Long">
            SELECT
            LAST_INSERT_ID()
        </selectKey>
        INSERT INTO loan (loan_name,loan_price,accrual,create_time,modify_time)
        VALUE (
        #{loanName,jdbcType=VARCHAR},
        #{loanPrice,jdbcType=DOUBLE},
        #{accrual,jdbcType=DOUBLE},
        #{createTime,jdbcType=TIMESTAMP},
        #{modifyTime,jdbcType=TIMESTAMP})
    </insert>
</mapper>